<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Create a new Campground!</h1>
            <div style="width: 30%; margin: 25px auto">
                <form action="/campgrounds" class="form-horizontal" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" id="newCampground" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="image" id="imageUrl" placeholder="Image Url">
                    </div>
                    <div class="form-group">
                        <textarea name="description" id="description" class="form-control" cols="30" rows="10" placeholder="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-lg btn-success btn-block">
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
<% include ../partials/footer.ejs %>